<link href="../../public/css/styles2.css" rel="stylesheet">
<h5>LIBERA APOSTA</h5>

<section class="containerCotas">
    <div class="row row-cols-1 containerCotas">
        {{#each apostas}}

        <div class="card text-white bg-success m-1 infosApostas col" style="height: auto">
            <div class="card-header headerCard">
                <h5 style="text-align: center;">#{{this.quantidade}} Cotas: </h5>
                <div class="cotas_participantes">


                    {{#if (eq this.status 'Aguardando pagamento..') }}
                    <p class="status naoPago">Aguardando pagamento para gerar cotas</p>
                    {{else}}
                    {{#each this.numeros}}

                    <p class="numbers">{{this}}</p>
                    {{/each}}
                    {{/if}}

                </div>

                {{#if (maior this.quantidade )}}
                <strong>
                    <p class="verTudo">VER TUDO</p>
                </strong>
                {{else}}

                {{/if}}

                <small>{{dateFormat this.data}}</small>
            </div>
            <div class="card-body">
                <p class="card-text"><strong>Participante:</strong> {{this.nome}}</p>
                <p class="card-text"><strong>Telefone:</strong> {{this.telefone}}</p>
                <p class="card-text"><strong>Instagram:</strong> {{this.instagram}}</p>

                {{#if (eq this.status 'Aguardando pagamento..') }}
                <p class="card-text status naoPago">{{this.status}}</p>
                {{else}}
                <p class="card-text status pago">{{this.status}}</p>
                {{/if}}

                <a href="/liberaAposta/{{this._id}}"><button type="button" class="btn btn-primary" style="
    margin: 4px;
    width: 200px;">Liberar
                        Aposta</button></a>

                <a href=" #"><button type="button" class="btn btn-danger excluirAposta"
                        name="/deletaAposta/{{this._id}}" style="
    margin: 4px;
    width: 200px;">Excluir
                        aposta</button></a>

            </div>

        </div>
        {{else}}
        <h5>Nenhuma aposta registrada!</h5>
        {{/each}}
    </div>

</section>

<script src="../../public/js/excluiAposta.js"></script>